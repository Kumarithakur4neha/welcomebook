<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store Home</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom styles can be added here if needed */
    </style>
</head>
<body class="bg-gray-100">

<div class="bg-cover bg-center h-screen" style="background-image: url('https://images.unsplash.com/photo-1517241034903-9a4c3ab12f00?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTEyfHxibGFjayUyMGJhY2tncm91bmR8ZW58MHx8MHx8fDA%3D');">

    <!-- Header -->
    <%- include("./partials/header")%>

    <!-- Page Title -->
    <p class="text-5xl text-center font-extrabold text-white mt-5">Book Store Home</p>

    <!-- Book Cards Container -->
    <div class="flex flex-wrap justify-center mt-12 px-6">

    <% books.forEach(function(book,index){ %>
        <!-- Individual Card -->
        <div class="card w-60 h-80 mx-4 mb-3 border border-gray-300 rounded-lg shadow-md">
            <!-- Image -->
            <img class="w-full h-40 object-cover rounded-t-lg" src="/images/<%= book.image %>" alt="<%= book.name %>">

            <!-- Card Content -->
            <div class="p-4">
                <p class="text-xl font-semibold text-white text-transform-uppercase mb-1 text-center"><%= book.name %></p>
                <p class="text-white mb-1 text-center"><%= book.authorname %></p>
                <p class="text-white mb-1 text-center"><%= book.bookprice %></p>
                <p class="text-white mb-1 text-center"><%= book.description %></p>
                <p class="text-white mb-1 text-center"><%= book.quantity %></p>
                <div class="flex justify-center gap-4">
                    <!-- Action Buttons -->
                    <button class="bg-grey hover:bg-green-600 text-white py-2 px-4 rounded-md text-sm mb-3 ">
                        <a href="/delete/<%= book._id %>">Delete Book</a>
                    </button>
                    <button class="bg-grey hover:bg-green-600 text-white py-2 px-4 rounded-md text-sm mb-3">
                        <a href="/update/<%= book._id %>">Update Book</a>
                    </button>
                </div>
            </div>
        </div>
    <% }) %>

    </div> <!-- End Book Cards Container -->

    <!-- Footer -->
    <%- include("./partials/footer")%>

</div> <!-- End Background Image Container -->

</body>
</html>
